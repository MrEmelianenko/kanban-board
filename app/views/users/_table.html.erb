<% if users.size > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'users/table_row', collection: users, as: :user %>
    </tbody>
  </table>
<% else %>
  <p>We can't found any users :(</p>
<% end %>
