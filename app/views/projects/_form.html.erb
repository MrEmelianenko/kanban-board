<%= render_full_errors(errors) if defined?(errors) %>

<%= form_for(project) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="page-header">
        <h4>Main Info</h4>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit nil, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="page-header">
        <h4>Project Members</h4>
      </div>

      <div id="project-users">
        <%= f.fields_for :project_users do |f_pu| %>
          <%= render 'project_user_fields', f: f_pu %>
        <% end %>

        <div class="links">
          <%= link_to_add_association 'Add Project Member', f, :project_users, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
